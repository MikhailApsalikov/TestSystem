        <Image HorizontalAlignment="Left" Height="157" Margin="10,348,0,0" VerticalAlignment="Top" Width="154" Source="/Kazakova.TestSystem.UI.Desktop;component/Рисунок1.jpg"/>
        <Image HorizontalAlignment="Left" Height="189" Margin="551,316,0,0" VerticalAlignment="Top" Width="152" Source="/Kazakova.TestSystem.UI.Desktop;component/Рисунок2.jpg"/>
